<h1>Edit Client</h1>

<form action="/clients/update" method="post">

    <input type="hidden" name="id" value="{{client._id}}">

    <div class="form-control">
        <label for="name">Client Name:</label>
        <input type="text" name="name" placeholder="Type client name..." value="{{client.name}}" />
    </div>

    <div class="form-control">
        <label for="name">Client Age:</label>
        <input type="text" name="age" placeholder="Type client age..." value="{{client.age}}" />
    </div>

    <div class="form-control">
        <label for="name">Client Occupation:</label>
        <input type="text" name="occupation" placeholder="Type client occupation..." value="{{client.occupation}}" />
    </div>

    <div class="form-control">
        <input type="submit" value="Save">
    </div>

</form>